@model POS_PruebaTecnica.Models.POS.Sales

@{
    ViewData["Title"] = "Nueva Venta";
}  
<h4>Generar Venta</h4>
<hr />
<div>
    <a asp-action="Index" class="btn btn-dark">Regresar</a>
</div>
<div class="container-fluid"> 
    <div class="accordion" id="SearchItem">
        <div class="accordion-item">
            <h2 class="accordion-header" id="ItemDescrip">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#ItemDescrip" aria-expanded="true" aria-controls="ItemDescrip">
                   Descripción
                </button>
            </h2>
            <div id="ItemDescrip" class="accordion-collapse collapse show" aria-labelledby="ItemDescrip" data-bs-parent="#SearchItem">
                <div class="accordion-body">
                    <form asp-action="addItem" method="post">
                        <div class="row">
                            <input type="hidden" name="idVenta" value="@Model.cabecera.id" />
                            <div class="col-* col-md-4 col-12">
                                <label>Producto</label>
                                <select class="form-control form-select selec2" required name="idProduct" asp-items="@ViewBag.productos">
                                </select>
                            </div>
                            <div class="col-* col-md-4 col-12">
                                <label>Cantidad</label>
                                <input name="cantidad" required slep="1" type="number" class="form-control">
                            </div>
                            <div class="col-* col-md-4 col-12">
                                <button class="btn btn-success h-100" type="submit">+ Agregar</button>
                            </div>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="CodeItem">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#CodeItem" aria-expanded="false" aria-controls="CodeItem">
                    CodigoProducto
                </button>
            </h2>
            <div id="CodeItem" class="accordion-collapse collapse" aria-labelledby="CodeItem" data-bs-parent="#SearchItem">
                <div class="accordion-body">
                    <form asp-action="addItem" method="post">
                        <div class="row">
                            <input type="hidden" name="idVenta" value="@Model.cabecera.id" />
                            <div class="col-* col-md-4 col-12">
                                <label>Producto</label>
                                <input name="codItem" slep="1" type="text" class="form-control"> 
                            </div>
                            <div class="col-* col-md-4 col-12">
                                <label>Cantidad</label>
                                <input name="cantidad" required slep="1" type="number" class="form-control">
                            </div>
                            <div class="col-* col-md-4 col-12">
                                <button class="btn btn-success h-100" type="submit">+ Agregar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>
<br />
<div class="card">
    <div class="card-header">
        Productos agregados
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <table class="table table-bordered table-hover">
                    <thead >
                        <tr>
                            <td>Linea</td>
                            <td>cantidad</td>
                            <td>Producto</td>
                            <td>precio</td>
                            <td>SubTotal</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.detalle!=null)
                            {
                                foreach(var item in Model.detalle)
                                { 
                                <tr>
                                    <td>@item.nkey</td>
                                    <td>@item.cantidad</td>
                                    <td>@item.descripcion</td>
                                    <td>@item.precio</td>
                                    <td>@item.subTotal</td>
                                    <td><a onclick="eliminarFila(@item.nkey)" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                                </tr>
                                }
                            }
                        }
                    </tbody> 
                    <tfoot> 
                        @if (Model.detalle != null)
                        { 
                            var Subtotal = Math.Round(Model.detalle.Sum(x => x.subTotal)/1.13m,2);
                            var iva = Math.Round(Subtotal * 0.13m, 2);
                            var totalFinal = Math.Round(Subtotal + iva, 2); 
                            <tr>
                                <th colspan="4"></th>
                                <th><b>SubTotal: </b></th>
                                <th>@Subtotal</th>
                            </tr>
                            <tr>
                                <th colspan="4"></th>
                                <th><b>MontIVA: </b></th>
                                <th>@iva</th>
                            </tr>
                            <tr>
                                <th colspan="4"></th>
                                <th><b>Total: </b></th>
                                <th>@totalFinal</th>
                            </tr>
                            <tr style="border:hidden !important">
                                <th colspan="5"></th> 
                                <th><button type="submit" class="btn btn-success">Guardar</button></th>
                            </tr>
                        }
                </table> 
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function eliminarFila(nkey) {  
            Swal.fire({
                title: "Está seguro?",
                text: "Realmente desea eliminar la linea, no podra reverir!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, Eliminar!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/POS/DeleteItem/" + nkey,
                        type: "GET",
                        contentType: "application/json",
                        success: function (response) { 
                            location.reload();
                        },
                        error: function (xhr, status, error) {
                            Swal.fire('ERROR', "Ocurrió un error al intentar eliminar la línea.", 'error')
                        }
                    });
                }
            }); 
        }
</script>